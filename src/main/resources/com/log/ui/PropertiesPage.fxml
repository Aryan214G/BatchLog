<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="800.0" prefWidth="1200.0" styleClass="root-layout" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <left>
        <VBox prefWidth="220.0" styleClass="sidebar">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label styleClass="sidebar-title" text="Properties">
               <VBox.margin>
                  <Insets bottom="16.0" />
               </VBox.margin>
            </Label>
            <Button mnemonicParsing="false" styleClass="sidebar-panel-btn" text="Button" />
            <Button layoutX="25.0" layoutY="71.0" mnemonicParsing="false" styleClass="sidebar-panel-btn" text="Button" />
            <Button layoutX="25.0" layoutY="112.0" mnemonicParsing="false" styleClass="sidebar-panel-btn" text="Button" />
            <Button layoutX="25.0" layoutY="153.0" mnemonicParsing="false" styleClass="sidebar-panel-btn" text="Button" />
            <Button layoutX="25.0" layoutY="195.0" mnemonicParsing="false" styleClass="sidebar-panel-btn" text="Button" />
         </children>
      </VBox>
    </left>

    <top>
        <VBox styleClass="topbar" />
    </top>

    <center>
        <StackPane styleClass="content-area">
            <children>
                <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="content-row">

                    <ScrollPane fitToHeight="true" fitToWidth="true" styleClass="panel-scroll" HBox.hgrow="ALWAYS">
                        <content>
                            <VBox alignment="TOP_CENTER" spacing="16.0" styleClass="subproperties-panel">
                                <children>
                                    <Label styleClass="subproperties-title" text="Label" />
                                    <Button styleClass="primary-btn" text="Button" />
                                    <Button styleClass="secondary-btn" text="Button" />
                                    <Button styleClass="secondary-btn" text="Button" />
                                </children>
                        <padding>
                           <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                        </padding>
                            </VBox>
                        </content>
                    </ScrollPane>

                    <ScrollPane styleClass="panel-scroll" HBox.hgrow="ALWAYS">
                        <content>
                            <VBox alignment="CENTER" styleClass="entries-panel">
                                <children>
                                    <Label styleClass="entry-title" text="Entries" />
                                    <GridPane styleClass="data-grid" />
                                    <GridPane styleClass="data-grid" />
                                </children>
                            </VBox>
                        </content>
                    </ScrollPane>

                </HBox>
            </children>
        </StackPane>
    </center>

    <bottom>
        <HBox styleClass="bottombar" />
    </bottom>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
</BorderPane>
