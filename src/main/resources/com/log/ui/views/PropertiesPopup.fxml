<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.log.ui.AddPropertiesPopupController">

    <!-- ===== CENTER CONTENT ===== -->
    <center>
        <VBox alignment="CENTER" spacing="25" BorderPane.alignment="CENTER">

            <padding>
                <Insets bottom="30" left="40" right="40" top="30" />
            </padding>

            <!-- Title -->
            <Label text="Add Attributes">
                <font>
                    <Font size="40" />
                </font>
            </Label>

            <!-- Attribute Name -->
            <VBox alignment="CENTER_LEFT" maxWidth="400" spacing="8">
                <Label text="Attribute Name" />
                <TextField fx:id="attributeNameField" maxWidth="Infinity" />
            </VBox>

            <!-- Units Section -->
            <VBox alignment="CENTER_LEFT" maxWidth="400" spacing="8">
                <Label text="Units" />
                <Button maxWidth="Infinity" text="Select Units" />
            </VBox>

        </VBox>
    </center>

    <!-- ===== SAVE BUTTON ===== -->
    <bottom>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">

            <padding>
                <Insets bottom="30" top="20" />
            </padding>

            <Button maxWidth="300" onAction="#handleSaveProperty" text="Save Attribute" />
        </VBox>
    </bottom>

</BorderPane>
