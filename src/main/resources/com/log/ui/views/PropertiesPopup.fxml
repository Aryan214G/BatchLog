<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.log.ui.AddPropertiesPopupController">

    <!-- CENTER CONTENT -->
    <center>
        <VBox alignment="CENTER"
              spacing="25"
              BorderPane.alignment="CENTER">

            <padding>
                <Insets top="30" bottom="30" left="40" right="40"/>
            </padding>

            <!-- Title -->
            <Label text="Add Attribute">
                <font>
                    <Font size="36"/>
                </font>
            </Label>

            <!-- Attribute Name -->
            <VBox alignment="CENTER_LEFT"
                  maxWidth="400"
                  spacing="8">
                <Label text="Attribute Name"/>
                <TextField fx:id="attributeNameField"
                           maxWidth="Infinity"/>
            </VBox>

        </VBox>
    </center>

    <!-- BOTTOM BUTTONS -->
    <bottom>
        <VBox alignment="CENTER"
              spacing="10"
              BorderPane.alignment="CENTER">

            <padding>
                <Insets top="20" bottom="30"/>
            </padding>

            <Button text="Save Attribute"
                    onAction="#handleSaveProperty"
                    maxWidth="250"/>

            <Button text="Cancel"
                    onAction="#handleCancel"
                    maxWidth="250"/>
        </VBox>
    </bottom>

</BorderPane>
