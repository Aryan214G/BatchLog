<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" prefHeight="800.0" prefWidth="1200.0" styleClass="root-layout" stylesheets="@../styles/settingsPage.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" >

    

    <center>
        <StackPane styleClass="content-area">
            <children>
                <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="content-row">

                    <ScrollPane fitToWidth="true" maxWidth="1.7976931348623157E308" styleClass="panel-scroll" HBox.hgrow="ALWAYS">
                        <content>
                            <VBox alignment="TOP_CENTER" styleClass="entries-panel">
                                <children>
                                    <HBox alignment="TOP_CENTER" fillHeight="false" prefHeight="100.0" prefWidth="200.0" styleClass="metric-chip-container">
                              <children>
                                 <Label alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="134.0" prefWidth="383.0" styleClass="sidebar-title" text="Set Defaults">
                                    <font>
                                       <Font size="35.0" />
                                    </font>
                                 </Label>
                              </children></HBox>
                                    <GridPane fx:id="entriesGrid" hgap="12" styleClass="input-field-container" vgap="16">

                                        <columnConstraints>
                                            <ColumnConstraints hgrow="ALWAYS" />
                                            <ColumnConstraints hgrow="NEVER" prefWidth="150" />
                                        </columnConstraints>

                                    </GridPane>

                                </children>
                            </VBox>
                        </content>
                    </ScrollPane>

                </HBox>
            </children>
        </StackPane>
    </center>

    <bottom>
        <HBox styleClass="bottombar" />
    </bottom>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <left>
        <VBox styleClass="sidebar" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" styleClass="sidebar-title" text="Settings" />
                <fx:include source="../components/searchBar.fxml" />
            <Button mnemonicParsing="false" prefHeight="45.0" prefWidth="218.0" text="Set defaults" />
            <Button layoutX="31.0" layoutY="137.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="218.0" text="Units" />
            <Button layoutX="31.0" layoutY="197.0" mnemonicParsing="false" prefHeight="45.0" prefWidth="218.0" text="Direction" />
                <ListView fx:id="categoriesListView" styleClass="buttons-list" VBox.vgrow="ALWAYS" />
                <Button fx:id="editButton" mnemonicParsing="false"  styleClass="edit-button" text="Edit" />
            </children>
        </VBox>
    </left>
</BorderPane>
