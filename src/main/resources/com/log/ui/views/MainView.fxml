<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="800.0" stylesheets="@homepage_style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Top Menu -->
    <top>
   <fx:include source="/com/log/ui/components/menubar.fxml"/>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Title -->
            <Label text="BatchLog">
                <font>
                    <Font size="45" />
                </font>
            </Label>

            <!-- Search Row -->
            <HBox alignment="CENTER" maxWidth="600" spacing="15">

                <TextField promptText="Search" HBox.hgrow="ALWAYS" />

                <Button text="OK" />

            </HBox>

            <!-- New Entry Button -->
            <Button text="New Entry">
                <font>
                    <Font name="Bodoni MT" size="12.0" />
                </font></Button>

        </VBox>
    </center>

</BorderPane>
