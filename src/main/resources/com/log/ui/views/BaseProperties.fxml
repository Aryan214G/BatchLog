<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.log.ui.BasePropertiesController">

    <!-- ===== TOP MENU ===== -->
    <top>
        <fx:include source="../components/menubar.fxml" />
    </top>

    <!-- ===== CENTER FORM ===== -->
    <center>
        <VBox alignment="CENTER" prefHeight="529.0" prefWidth="818.0" spacing="15" stylesheets="@../styles/baseCategory.css" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <Label text="Project Name" />
            <TextField fx:id="projectName" alignment="CENTER" maxWidth="700.0" />

            <Label text="Batch No." />
            <TextField fx:id="batchNo" alignment="CENTER" maxWidth="700.0" />

            <Label text="Product Name" />
            <TextField fx:id="productName" alignment="CENTER" maxWidth="700.0" />

            <Label text="Component ID" />
            <TextField fx:id="componentID" alignment="CENTER" maxWidth="700.0" />

            <Label text="Test Date" />
            <DatePicker fx:id="testDate" maxWidth="250.0" />

            <Label text="Place of Testing" />
            <TextField fx:id="placeOfTesting" alignment="CENTER" maxWidth="700.0" />

            <Label text="File Name" />
            <TextField fx:id="fileName" alignment="CENTER" maxWidth="700.0" onMouseClicked="#handleNext" />

        </VBox>
    </center>

    <!-- ===== BOTTOM BUTTONS ===== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="20" right="20" />
            </padding>
            <Button onMouseClicked="#handleCancel" text="Cancel" />
            <Button onMouseClicked="#handleNext" text="Next" />
        </HBox>
    </bottom>

</BorderPane>
