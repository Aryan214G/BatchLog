<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <!-- ===== TOP MENU ===== -->
    <top>
        <MenuBar>
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Close" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Delete" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- ===== CENTER FORM ===== -->
    <center>
        <VBox alignment="CENTER" prefHeight="529.0" prefWidth="818.0" spacing="15" stylesheets="@../styles/baseProperties.css" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <Label text="Project Name" />
            <TextField alignment="CENTER" maxWidth="700.0" />

            <Label text="Batch No." />
            <TextField alignment="CENTER" maxWidth="700.0" />

            <Label text="Product Name" />
            <TextField alignment="CENTER" maxWidth="700.0" />

            <Label text="Component ID" />
            <TextField alignment="CENTER" maxWidth="700.0" />

            <Label text="Test Date" />
            <DatePicker maxWidth="250.0" />

            <Label text="Place of Testing" />
            <TextField alignment="CENTER" maxWidth="700.0" />

            <Label text="File Name" />
            <TextField alignment="CENTER" maxWidth="700.0" />

        </VBox>
    </center>

    <!-- ===== BOTTOM BUTTONS ===== -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="20" right="20" />
            </padding>
            <Button text="Cancel" />
            <Button text="Save" />
        </HBox>
    </bottom>

</BorderPane>
